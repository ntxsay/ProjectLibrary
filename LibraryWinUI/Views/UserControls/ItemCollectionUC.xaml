                </GridView>
            </ScrollViewer>
        </DataTemplate>
        <DataTemplate x:Key="ListViewLibraryTemplate" x:DataType="libraryVM:LibraryVM">
            <ScrollViewer x:Name="scrollItems" HorizontalScrollMode="Disabled" Grid.Row="0">
                <ListView x:Name="ListViewItems" ItemsSource="{Binding }" SelectionMode="Extended" IsItemClickEnabled="False" Padding="4,14"
                             ScrollViewer.VerticalScrollMode="Disabled" IsMultiSelectCheckBoxEnabled="True" SingleSelectionFollowsFocus="True">
                </ListView>
            </ScrollViewer>
        </DataTemplate>
        <!--<dTemplateSelectors:DataViewModeTemplateSelector x:Key="dataViewModeTemplateSelector"
        DataGridViewTemplate="{StaticResource DataGridViewTemplate}"
        GridViewTemplate="{StaticResource GridViewTemplate}" />-->
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Pivot x:Name="PivotItems" x:FieldModifier="public" ItemsSource="{Binding Mode=OneWay}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                               SelectedIndex="{x:Bind UiViewModel.SelectedPivotIndex, Mode=OneWay}" PivotItemLoaded="PivotItems_PivotItemLoaded">
            <Pivot.OpacityTransition>
                <ScalarTransition />
            </Pivot.OpacityTransition>
            <Pivot.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Key}"></TextBlock>
                </DataTemplate>
            </Pivot.HeaderTemplate>
        </Pivot>
        <Grid Grid.Row="1">
            <customComponents:PagingBar Margin="15 5 15 10"/>
        </Grid>
    </Grid>

</UserControl>
